<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_unselect"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtVoucherCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã voucher"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FF5722" />

        <TextView
            android:id="@+id/txtVoucherDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm giá"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#4CAF50" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtVoucherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên voucher"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txtVoucherDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:visibility="gone" />

</LinearLayout>























