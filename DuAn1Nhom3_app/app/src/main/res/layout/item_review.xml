<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="#F5F5F5"
    android:layout_marginHorizontal="4dp">

    <!-- User name and rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtReviewUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Người dùng"
            android:textStyle="bold"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- Comment -->
    <TextView
        android:id="@+id/txtReviewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung đánh giá..."
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:textColor="#333333" />

    <!-- Date -->
    <TextView
        android:id="@+id/txtReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2024"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="4dp" />

    <!-- Admin Reply -->
    <LinearLayout
        android:id="@+id/layoutAdminReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E3F2FD"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phản hồi từ quản trị viên:"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/txtAdminReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung phản hồi..."
            android:textSize="13sp"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Admin Actions -->
    <LinearLayout
        android:id="@+id/layoutAdminActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnReplyReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả lời"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnDeleteReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="12sp"
            android:padding="8dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>

